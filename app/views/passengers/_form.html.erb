<%= form_for([@journey, @passenger]) do |f| %>
  <% if @passenger.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@passenger.errors.count, "error") %> prohibited this passenger from being saved:</h2>

      <ul>
      <% @passenger.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h2>What is your preferred price?</h2> 
    <% if @journey.driver.price = nil %>
    <%= "The driver has not yet set a required price for the journey"  %>
    <% else %>
    <%= "The driver's preferred price is #{@journey.driver.price}" %><br>
    <%= f.text_field :price,  :required => true %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit 'Join the journey!' %>
  </div>
<% end %>
