<p id="notice"><%= notice %></p>

<h1>Listing Journeys</h1>

<table>
  <thead>
    <tr>
      <th>Starting point</th>
      <th>Ending point</th>
      <th>Starting time</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journeys.each do |journey| %>
      <tr>
        <td><%= journey.starting_point %></td>
        <td><%= journey.ending_point %></td>
        <td><%= journey.starting_time %></td>
        <td><%= journey.user_id %></td>
        <td><%= journey.status %></td>
        <td><%= link_to 'Show', journey %></td>
        <td><%= link_to 'Edit', edit_journey_path(journey) %></td>
        <td><%= link_to 'Destroy', journey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

